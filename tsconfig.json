{
  "compilerOptions": {
    "target": "ES2016",                     // Suitable target for most Node apps
    "module": "commonjs",                   // CommonJS for Node.js
    "rootDir": "./src",                     // Your TypeScript source files
    "outDir": "./dist",                     // Compiled JS output
    "declaration": true,                    // Generates .d.ts files
    "esModuleInterop": true,                // Allows default imports from CommonJS
    "forceConsistentCasingInFileNames": true, // Ensures consistent import casing
    "strict": true,                         // Enables all strict type-checking
    "skipLibCheck": true                    // Skips type checks on .d.ts files (faster)
  },
  "include": ["src"]
}
